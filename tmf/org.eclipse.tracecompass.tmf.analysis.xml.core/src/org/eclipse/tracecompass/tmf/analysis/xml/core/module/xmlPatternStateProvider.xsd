		<xs:attribute name="cond" type="xs:string" use="optional">
			<xs:annotation>
				<xs:documentation>The ID of the test to be validated.</xs:documentation></xs:annotation></xs:attribute>
		<xs:attribute name="target" type="xs:string" use="optional">
